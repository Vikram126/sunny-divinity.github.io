---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Contact',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText tagline="Contact" title="Let's Connect!" />

  <ContactUs
    id="form"
    title="Drop us a message today!"
    subtitle="Get in touch with our team for support, inquiries, or feedback, We're here to help, reach out for any questions or concerns."
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: 'Name',
      },
      {
        type: 'email',
        name: 'email',
        label: 'Email',
      },
    ]}
    textarea={{
      label: 'Message',
    }}
    disclaimer={{
      label:
        'By submitting this contact form, you acknowledge and agree to the collection of your personal information.',
    }}
    description="Our support team typically responds within 24 business hours."
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="We are here to help!"
    items={[
      {
        title: 'General support',
        description: `Chat with us for inquiries related to anything we are here for you.`,
      },
      {
        title: 'Contact team',
        description:
          'Chat with us for questions about inquiries, details, and sources. ',
      },
      {
        title: 'Technical support',
        description:
          'Chat with us when facing issues problems with application, or other technical challenge.',
      },
      {
        title: 'Phone',
        description: 'not avilable right now',
        icon: 'tabler:headset',
      },
      {
        title: 'Email',
        description: 'howcanwehelp@divinityscience.com',
        icon: 'tabler:mail',
      },
      {
        title: 'Location',
        description: 'Austin, TX, USA',
        icon: 'tabler:map-pin',
      },
    ]}
  />
</Layout>
